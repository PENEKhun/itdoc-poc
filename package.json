{
    "name": "@chilldocs/monorepo",
    "version": "0.0.0",
    "private": "true",
    "description": "POC",
    "license": "Apache-2.0",
    "author": {
        "name": "Moon Seonghun",
        "email": "penekhun@gamil.com",
        "url": "https://www.github.com/penekhun"
    },
    "type": "module",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "packageManager": "pnpm@10.5.2",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        }
    },
    "workspaces": [
        "lib",
        "examples/*"
    ],
    "files": [
        "dist"
    ],
    "scripts": {
        "clean": "rimraf dist",
        "build": "pnpm run clean && tsup",
        "dev": "tsup --watch",
        "test": "mocha",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "postinstall": "husky",
        "prepublishOnly": "pnpm run build"
    },
    "dependencies": {
        "jest": "^29.7.0",
        "mocha": "^11.1.0"
    },
    "peerDependencies": {
        "jest": "^29.0.0",
        "mocha": "^11.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^8.57.0",
        "@types/chai": "^5.0.1",
        "@types/mocha": "^10.0.10",
        "@types/node": "^20.11.24",
        "chai": "^5.2.0",
        "eslint": "^9.21.0",
        "eslint-config-prettier": "^10.0.2",
        "eslint-plugin-jsdoc": "^50.6.0",
        "eslint-plugin-mocha": "^10.5.0",
        "globals": "^13.24.0",
        "husky": "^9.1.7",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "supports-color": "^10.0.0",
        "tsx": "^4.19.3",
        "tslib": "^2.8.1",
        "tsup": "^8.4.0",
        "typedoc": "^0.27.9",
        "typescript": "~5.7",
        "typescript-eslint": "~8.19"
    },
    "engines": {
        "node": ">=20 <21"
    }
}
